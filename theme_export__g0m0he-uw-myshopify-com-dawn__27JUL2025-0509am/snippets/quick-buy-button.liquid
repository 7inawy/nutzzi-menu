{% comment %}
  Renders a quick buy button for products

  Accepts:
  - product: {Object} Product Liquid object
  - show_icon: {Boolean} Show cart icon (optional, default: true)
  - button_text: {String} Custom button text (optional)
  - button_class: {String} Additional CSS classes (optional)

  Usage:
  {% render 'quick-buy-button', product: product %}
{% endcomment %}

{%- liquid
  assign show_icon = show_icon | default: true
  assign button_text = button_text | default: 'products.product.quick_buy' | t
  assign button_class = button_class | default: ''
  assign has_variants = product.has_only_default_variant == false
-%}

<quick-buy-button
  class="quick-buy-button {{ button_class }}"
  data-product-id="{{ product.id }}"
  data-product-url="{{ product.url }}"
  data-has-variants="{{ has_variants }}"
  data-product-title="{{ product.title | escape }}"
  data-product-image="{{ product.featured_media | image_url: width: 300 }}"
  data-product-price="{{ product.price | money }}"
  data-product-compare-price="{{ product.compare_at_price | money }}"
  {% if has_variants %}
    data-variants="{{ product.variants | json | escape }}"
  {% endif %}
>
  <button
    type="button"
    class="button button--full-width button--secondary quick-buy-button__trigger"
    {% if product.available == false %}disabled{% endif %}
    aria-label="{{ button_text }}"
  >
    {% if show_icon %}
      <svg class="icon icon-cart" aria-hidden="true" focusable="false" viewBox="0 0 24 24">
        <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12L8.1 13h7.45c.75 0 1.41-.41 1.75-1.03L21.7 4H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/>
      </svg>
    {% endif %}
    <span class="quick-buy-button__text">
      {% if product.available %}
        {{ button_text }}
      {% else %}
        {{ 'products.product.sold_out' | t }}
      {% endif %}
    </span>
  </button>
</quick-buy-button> 