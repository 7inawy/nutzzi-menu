{{ 'component-quick-buy.css' | asset_url | stylesheet_tag }}
{{ 'component-modal.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<script src="{{ 'quick-buy.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="quick-buy-section section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="quick-buy-section__title {{ section.settings.heading_size }}">
        {{ section.settings.title | escape }}
      </h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <div class="quick-buy-section__description rte">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <quick-buy-container
      class="quick-buy-container"
      data-section="{{ section.id }}"
      data-collection="{{ section.settings.collection | default: 'all' }}"
      data-products-to-show="{{ section.settings.products_to_show }}"
      data-columns-desktop="{{ section.settings.columns_desktop }}"
      data-columns-mobile="{{ section.settings.columns_mobile }}"
      data-show-vendor="{{ section.settings.show_vendor }}"
      data-show-rating="{{ section.settings.show_rating }}"
      data-image-ratio="{{ section.settings.image_ratio }}"
      data-image-shape="{{ section.settings.image_shape }}"
      data-show-secondary-image="{{ section.settings.show_secondary_image }}"
    >
      <div class="quick-buy-grid grid grid--{{ section.settings.columns_mobile }}-col-mobile grid--{{ section.settings.columns_desktop }}-col-desktop">
        <!-- Products will be loaded here via JavaScript -->
      </div>
    </quick-buy-container>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.quick_buy.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.quick_buy.settings.title.label",
      "default": "Quick Buy Products"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options.small.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options.medium.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options.large.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.quick_buy.settings.description.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.quick_buy.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "t:sections.quick_buy.settings.products_to_show.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.quick_buy.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "t:sections.quick_buy.settings.columns_mobile.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.quick_buy.settings.columns_mobile.options.1.label"
        },
        {
          "value": "2",
          "label": "t:sections.quick_buy.settings.columns_mobile.options.2.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.quick_buy.settings.show_vendor.label"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "t:sections.quick_buy.settings.show_rating.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.quick_buy.settings.image_ratio.options.adapt.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.quick_buy.settings.image_ratio.options.portrait.label"
        },
        {
          "value": "square",
          "label": "t:sections.quick_buy.settings.image_ratio.options.square.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.quick_buy.settings.image_ratio.label"
    },
    {
      "type": "select",
      "id": "image_shape",
      "options": [
        {
          "value": "default",
          "label": "t:sections.quick_buy.settings.image_shape.options.default.label"
        },
        {
          "value": "arch",
          "label": "t:sections.quick_buy.settings.image_shape.options.arch.label"
        },
        {
          "value": "blob",
          "label": "t:sections.quick_buy.settings.image_shape.options.blob.label"
        },
        {
          "value": "chevronleft",
          "label": "t:sections.quick_buy.settings.image_shape.options.chevronleft.label"
        },
        {
          "value": "chevronright",
          "label": "t:sections.quick_buy.settings.image_shape.options.chevronright.label"
        },
        {
          "value": "diamond",
          "label": "t:sections.quick_buy.settings.image_shape.options.diamond.label"
        },
        {
          "value": "parallelogram",
          "label": "t:sections.quick_buy.settings.image_shape.options.parallelogram.label"
        },
        {
          "value": "round",
          "label": "t:sections.quick_buy.settings.image_shape.options.round.label"
        }
      ],
      "default": "default",
      "label": "t:sections.quick_buy.settings.image_shape.label"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "t:sections.quick_buy.settings.show_secondary_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.quick_buy.presets.name"
    }
  ]
}
{% endschema %} 